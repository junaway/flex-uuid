{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "plugins": ["prettier"],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "prettier/prettier": "error",
        "no-plusplus": [2, { "allowForLoopAfterthoughts": true }],
        "no-nested-ternary": "off",
        "import/extensions": ["error", "ignorePackages"]
    }
}
