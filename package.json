{
  "name": "flexid",
  "version": "0.7.3",
  "type": "module",
  "description": "A tiny, fast, sortable, flexible id generator",
  "main": "dist/cjs/index.js",
  "module": "dist/mjs/index.js",
  "exports": {
    ".": {
      "import": "./dist/mjs/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "files": [
    "dist/cjs/*.js",
    "dist/mjs/*.js"
  ],
  "keywords": [
    "flexid",
    "uuid",
    "tiny",
    "fast",
    "sortable",
    "compact",
    "flexible",
    "benchmark",
    "nanoid",
    "ksuid",
    "ulid",
    "uuid-random",
    "short-uuid",
    "stripe"
  ],
  "author": "Juan Pablo Vega <@junaway>",
  "license": "MIT",
  "scripts": {
    "lint": "eslint ./src --fix",
    "prettier" : "prettier --write ./src",
    "build": "rm -fr dist/* && npm run lint && tsc -p tsconfig-mjs.json && tsc -p tsconfig-cjs.json && ./scripts/fixup"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/junaway/flexid.git"
  },
  "bugs": {
    "url": "https://github.com/junaway/flexid/issues"
  },
  "homepage": "https://github.com/junaway/flexid#readme",
  "dependencies": {
    "nanoid": "^3.1.25"
  },
  "devDependencies": {
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.1",
    "prettier": "^2.4.1",
    "typescript": "^4.4.3"
  }
}
